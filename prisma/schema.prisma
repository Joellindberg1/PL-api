datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id                      Int      @id @default(autoincrement())
  name                    String   @unique
  arena                   String
  arenaCapacity           Int
  city                    String
  manager                 String
  premierleagueTitles     Int
  faCupTitles             Int
  marathonTablePlacement  Int
  marathonTablePoints     Int
  recordGoalscorer        String
  recordGoals             Int
  homeshirtsColor         String
  awayshirtsColor         String
  clubStarted             DateTime
  lastPromotionYear       Int?     // År när laget senast blev uppflyttat (null = aldrig nedflyttat)
  lastPromotionSeason     String?  // Säsong när laget senast blev uppflyttat (ex: "25/26")
  isFoundingMember        Boolean  @default(false) // True = varit med från Premier League start 1992
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

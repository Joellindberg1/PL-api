datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id                      Int      @id @default(autoincrement())
  name                    String   @unique
  arena                   String
  arenaCapacity           Int
  city                    String
  manager                 String
  premierleagueTitles     Int
  faCupTitles             Int
  marathonTablePlacement  Int
  marathonTablePoints     Int
  recordGoalscorer        String
  recordGoals             Int
  homeshirtsColor         String
  awayshirtsColor         String
  clubStarted             DateTime
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
